fixelcrop ../fdc TDI_rh_FBG/rh_FBG_TDI.mif fdc_rh_FBG -force
tck2fixel lh_IFG_PRESMA.tck ../fdc TDI_lh_IFG_PRESMA lh_IFG_PRESMA_TDI.mif
fixelcrop ../fdc TDI_lh_IFG_PRESMA/lh_IFG_PRESMA_TDI.mif fdc_lh_IFG_PRESMA
