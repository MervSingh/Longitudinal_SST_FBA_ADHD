cp lh_FBG.tck ./fixel_masks_fdc/lh_FBG.tck
cp rh_FBG.tck ./fixel_masks_fdc/rh_FBG.tck
cp lh_IFG_PRESMA.tck ./fixel_masks_fdc/lh_IFG_PRESMA.tck
